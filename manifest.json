{
  "manifest_version": 3,
  "name": "Cat Parade Box",
  "version": "1.0.0",
  "description": "Toggle a floating box with animated cats.",
  "permissions": ["scripting", "activeTab", "tabs"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle Cat Parade Box",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["audio/meowmeow-song.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
