{
  "manifest_version": 3,
  "name": "Cat Games",
  "version": "1.0.1",
  "description": "Toggle a floating box with animated cats.",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle Cat Parade Box",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.png",
        "assets/*.jpg",
        "assets/*.jpeg",
        "assets/*.gif",
        "assets/*.webp",
        "audio/*.mp3",
        "audio/*.ogg",
        "audio/*.wav",
        "styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
